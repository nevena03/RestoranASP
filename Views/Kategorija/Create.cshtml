@model RestoranASP.Models.Kategorija
@{
	ViewData["Title"] = "Nova kategorija";

}
<h2 class="text-center mb-3">Nova kategorija</h2>
<div class="row justify-content-center">
	<div class="container border border-success p-4 col-7 bg-light">
		<form asp-action="Create" method="post">
			<div class="form-group">
				<label asp-for="Naziv" class="form-label fw-bold">Naziv kategorije: </label>
				<input type="text" class="form-control" asp-for="Naziv" placeholder="Unesite naziv kategorije">
				<span asp-validation-for="Naziv" class="text-danger"></span>

			</div>
			<div class="d-flex justify-content-center mt-3">
				<button type="submit" class="btn btn-success">Dodaj kategoriju</button>
			</div>

		</form>
	</div>
</div>
