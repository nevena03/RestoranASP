@model RestoranASP.Models.Jelo
@{
	ViewData["Title"] = "Detaljnije o jelu";
}
<h2 class="text-center mb-3">@Model.Naziv</h2>
<div class="row justify-content-center">
	<div class="container border border-danger col-6 p-3 bg-light">
		<div>
			<img src="@Model.Slika" style="width: 100%" />
		</div>
		<div class="row justify-content-between mt-3">
			<div class="col-auto fw-bold">
				Cena: @Model.Cena RSD
			</div>
			<div class="col-auto fw-bold">
				Kategorija: <a asp-controller="Kategorija" asp-action="Details" asp-route-id="@Model.KategorijaId" >@Model.Kategorija.Naziv</a>
			</div>

		</div>


	</div>
</div>